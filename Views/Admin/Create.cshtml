@model Healthy_Recipes.ViewModels.RecipeViewModel

@{
    ViewData["Title"] = "Ajouter une recette";
}

<div class="bg-white rounded-xl w-full max-w-2xl mx-auto p-6">
    <h3 class="text-xl font-bold text-gray-800 mb-6">Ajouter une nouvelle recette</h3>

    <form asp-action="Create" enctype="multipart/form-data" class="space-y-6">
        <div>
            <label for="Title" class="block text-sm font-medium text-gray-700 mb-1">Titre de la recette</label>
            <input asp-for="Title" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
            <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label for="Category" class="block text-sm font-medium text-gray-700 mb-1">Catégorie</label>
            <select asp-for="Category" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
                <option value="Végétarien">Végétarien</option>
                <option value="Vegan">Vegan</option>
                <option value="Sans gluten">Sans gluten</option>
                <option value="Protéiné">Protéiné</option>
                <option value="Faible en calories">Faible en calories</option>
            </select>
            <span asp-validation-for="Category" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label for="PreparationTime" class="block text-sm font-medium text-gray-700 mb-1">Temps de préparation (minutes)</label>
            <input asp-for="PreparationTime" type="number" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
            <span asp-validation-for="PreparationTime" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label for="Image" class="block text-sm font-medium text-gray-700 mb-1">Image de la recette</label>
            <div class="flex items-center justify-center w-full">
                <label for="Image" class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100">
                    <div class="flex flex-col items-center justify-center pt-5 pb-6">
                        <i class="fas fa-cloud-upload-alt text-gray-400 text-3xl mb-2"></i>
                        <p class="mb-2 text-sm text-gray-500">Cliquez pour télécharger ou glisser-déposer</p>
                        <p class="text-xs text-gray-500">PNG, JPG (Max. 5MB)</p>
                    </div>
                    <input asp-for="Image" type="file" class="hidden" accept="image/png,image/jpeg" required />
                </label>
            </div>
        </div>

        <div>
            <label for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <textarea asp-for="Description" rows="3" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"></textarea>
            <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label for="Ingredients" class="block text-sm font-medium text-gray-700 mb-1">Ingrédients</label>
            <textarea asp-for="Ingredients" rows="5" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="Un ingrédient par ligne"></textarea>
            <span asp-validation-for="Ingredients" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label for="Instructions" class="block text-sm font-medium text-gray-700 mb-1">Instructions</label>
            <textarea asp-for="Instructions" rows="5" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="Une étape par ligne"></textarea>
            <span asp-validation-for="Instructions" class="text-red-600 text-sm"></span>
        </div>

        <div class="grid grid-cols-2 gap-4">
            <div>
                <label for="Calories" class="block text-sm font-medium text-gray-700 mb-1">Calories (kcal)</label>
                <input asp-for="Calories" type="number" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Calories" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label for="Protein" class="block text-sm font-medium text-gray-700 mb-1">Protéines (g)</label>
                <input asp-for="Protein" type="number" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Protein" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label for="Carbohydrates" class="block text-sm font-medium text-gray-700 mb-1">Glucides (g)</label>
                <input asp-for="Carbohydrates" type="number" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Carbohydrates" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label for="Fat" class="block text-sm font-medium text-gray-700 mb-1">Lipides (g)</label>
                <input asp-for="Fat" type="number" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Fat" class="text-red-600 text-sm"></span>
            </div>
        </div>

        <div class="flex justify-end space-x-3 pt-4">
            <a asp-action="Index" class="px-6 py-2 border border-gray-300 rounded-lg font-medium text-gray-700 hover:bg-gray-100 transition">
                Annuler
            </a>
            <button type="submit" class="px-6 py-2 bg-green-700 text-white rounded-lg font-medium hover:bg-green-800 transition">
                Publier la recette
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}