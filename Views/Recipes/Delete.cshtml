@model Healthy_Recipes.ViewModels.RecipeViewModel

@{
    ViewData["Title"] = "Supprimer la recette";
}

<div class="bg-white rounded-xl w-full max-w-2xl mx-auto p-6">
    <h3 class="text-xl font-bold text-gray-800 mb-6">Êtes-vous sûr de vouloir supprimer cette recette ?</h3>

    <div class="mb-6">
        <h4 class="text-lg font-semibold text-gray-700">@Model.Title</h4>
        <p class="mt-2 text-gray-600">@Model.Description</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="flex gap-4">
            <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700">
                <i class="fas fa-trash-alt mr-2"></i>Supprimer
            </button>
            <a asp-action="Index" class="bg-gray-200 text-gray-800 px-6 py-2 rounded-lg hover:bg-gray-300">
                <i class="fas fa-arrow-left mr-2"></i>Retour à la liste
            </a>
        </div>
    </form>
</div>
