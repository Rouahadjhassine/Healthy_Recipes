@using Healthy_Recipes.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Inscription";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container max-w-md w-full bg-white rounded-xl shadow-md p-8">
    <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Inscription</h2>
    <form asp-action="Register" method="post" class="space-y-6">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm text-center"></div>
        <div>
            <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="FullName" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="Votre nom complet" />
            <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Email" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="Votre email" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Password" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="Votre mot de passe" />
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="ConfirmPassword" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" placeholder="Confirmez le mot de passe" />
            <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
        </div>
        <button type="submit" class="w-full bg-green-700 text-white py-2 rounded-lg font-medium hover:bg-green-800 transition">
            S'inscrire
        </button>
        <p class="text-center text-sm text-gray-600 mt-4">
            Déjà un compte ? <a asp-controller="Account" asp-action="Login" class="text-green-700 hover:underline">Se connecter</a>
        </p>
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="text-green-700 hover:underline text-sm">Retour</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}