@{
    ViewData["Title"] = "Profil Utilisateur";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Profil Utilisateur</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Bienvenue !</h5>
                            <p class="mb-2"><strong>Email :</strong> @((User.Identity?.Name ?? "Non spécifié"))</p>
                            <p><strong>Nom complet :</strong> @(ViewData["FullName"] ?? "Non spécifié")</p>
                        </div>
                        <div class="col-md-6">
                            <div class="mt-4">
                                <a asp-action="Logout" class="btn btn-danger">Déconnexion</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>